<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!-- Inherit from the light Material Theme -->
  <style name="MyCustomTheme" parent="android:Theme.Material.Light">
    <!-- Override the app bar color -->
    <item name="android:colorPrimaryDark">@color/my_green</item>
    <item name="android:colorPrimary">@color/my_green</item>
    <!-- Override the color of UI controls -->
    <item name="android:colorAccent">@color/my_carrot</item>
    <item name="android:textColorPrimary">@color/my_white</item>
    <item name="android:windowBackground">@color/my_blue</item>
  </style>

  <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">#FFCC00</item>
    <item name="android:textColorPrimary">#FFFFFF</item>
    <item name="android:background">#5fa3d0</item>
  </style>

</resources>
